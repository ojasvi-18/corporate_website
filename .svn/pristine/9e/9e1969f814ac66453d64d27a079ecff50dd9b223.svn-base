/* No Js */
.no-js .owl-carousel {
    display: block;
}

//-----------------------------------------------------------------
// Theme Styles
//-----------------------------------------------------------------

.owl-dots {
    text-align: center;
    -webkit-tap-highlight-color: transparent;
    .owl-dot {
        display: inline-block;
        zoom: 1;
        *display: inline;
        span {
            width: 10px;
            height: 10px;
            margin: 5px 7px;
            background: rgba($black, 0.75);
            display: block;
            transition: 0.4s;
            -webkit-backface-visibility: visible;
            border-radius: 50%;
        }
        &.active,
        &:hover {
            span {
                background: rgba($white, 0.4);
            }
        }
    }
}