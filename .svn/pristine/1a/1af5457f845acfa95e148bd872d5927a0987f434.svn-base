package com.zillious.corporate_website.portal.utility;

import java.util.Collection;
import java.util.Map;

public class CollectionsUtility {

    public static boolean isCollectionEmpty(Collection< ? > col) {
        return col == null || col.isEmpty();
    }

    public static boolean isCollectionEmpty(Map< ? , ? > mapCollection) {
        return mapCollection == null || mapCollection.isEmpty();
    }

}
