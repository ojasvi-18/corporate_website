package com.zillious.corporate_website.portal.dao;

import java.util.List;

import org.springframework.stereotype.Component;

import com.zillious.corporate_website.portal.ui.model.Employee;

@Component
public interface EmployeeDao extends Dao {

    /**
     * This function returns the list of all employees present in the database.
     * 
     * @return
     */
    List<Employee> getAllEmployees();

    /**
     * This fucntion adds an Employee, that is sent as an argument to it.
     * 
     * @param employee
     */
    void addEmployee(Employee employee);
}
